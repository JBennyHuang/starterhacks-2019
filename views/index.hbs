<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar">
      <div class="container" style = " margin: 5px 5px 5px 5px;  height: 100% " align="center">
        <div class="sidebar-header" style="margin-top: 50px">
            <h3 style = "text-align: center; font-family: 'Pacifico', cursive">Dressroom</h3>
        </div>

        <ul class="list-unstyled components" align="center">
          
            <p style = "text-align: center;">Select a shirt.</p>
            {{# each products}}
                {{# each this}}
                    <li>
                        <a href="#"><img src="{{this.product}}" alt="" style = " height = 300px; width : 300px; background-color: #b4d7bf; border-radius: 10px"></a>
                    </li>
                {{/each}}
            {{/each}}
        </ul>
        <button type="button" id="stop" class="btn btn-danger" style="width: 120px; height: 80px; bottom: 0px"; >
            <i class="fas fa-align-left"></i>
            <span>STOP</span>
        </button>
      </div>
      
    </nav>
    <!-- Page Content -->
    <div id="content">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">

                <button type="button" id="sidebarCollapse" class="btn btn-info">
                    <i class="fas fa-align-left"></i>
                    <span id= "toggle">Toggle Sidebar</span>
                </button>
            </div>
        </nav>
    </div>
</div>

<canvas id="camera" style = "width: 75%; position: absolute; top: 0px; right: 0px;"></canvas>
